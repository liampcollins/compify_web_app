@import '_normalize.styl'
@import '_typography.styl'
@import '_animations.styl'
@import '../components/competitions/competitions.styl'
@import '../components/playlists/playlists.styl'

body
  background offwhite
  box-sizing border-box
  font-family: 'din-condensed-web'
  text-transform: uppercase
.page-container
  display flex
  flex-direction row
  align-items stretch
  width: 100%
.navbar
  background: url('../images/dark-bg.jpg')
  height 100vh
  display flex
  flex-direction column
  padding: 80px 20px 20px 20px
  flex-basis: 15%
  img
    margin-bottom: 40px
  hr
    width: 90%
    margin: 15px auto
  a
    text-decoration: none
    text-align: center
    .new-comp-button
      color #fff
      height 100%
      text-transform: uppercase
      font-size: 15px

.new-competition
    text-align center
    input
      font-size 45px
      border 5px solid #125688
      border-radius 5px
      margin 30px auto
      padding 5px

.photo-grid
  display flex
  flex-wrap wrap
  max-width 1200px
  margin 0 auto

.grid-figure
  flex-basis calc(33.333% - 4rem)
  flex-grow 1
  flex-shrink 0
  margin 0 2rem 2rem 2rem
  padding 2rem
  border 1px solid lightgray
  background white
  box-shadow 0 0 0 5px rgba(0,0,0,0.03);
  position relative

// COMMON
a
  text-decoration: none
.grid-title
  color: #fff
  font-size: 50px
  width 100%
  text-align center
  height: 100px
  padding-top: 50px
