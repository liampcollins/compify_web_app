@import 'utils.styl'
@import 'navbar.styl'
@import 'normalize.styl'
@import '../components/competitions/competitions.styl'
@import '../components/playlists/playlists.styl'
@import '../../node_modules/react-datepicker/dist/react-datepicker.css';

body
  background offwhite
  text-transform: uppercase
.page-container
  display flex
  flex-direction row
  align-items stretch
  width: 100%
  > div:nth-child(2)
    width: 100%
.home
  width: 100%
  padding: 100px
  text-align: center;
  background: linear-gradient(rgb(8, 8, 8), rgba(0, 0, 0, 0.78)), url('../images/turntable.jpg')
  .spotify-image
    width: 40%

.photo-grid
  display flex
  flex-wrap wrap
  max-width 1200px
  margin 0 auto

.grid-figure
  flex-basis calc(33.333% - 4rem)
  flex-grow 1
  flex-shrink 0
  margin 0 2rem 2rem 2rem
  padding 2rem
  border 1px solid lightgray
  background white
  box-shadow 0 0 0 5px rgba(0,0,0,0.03);
  position relative

.grid-title
  color: #fff
  font-size: 50px
  width 100%
  height: 100vh
  text-align center
  height: 100px
  padding-top: 50px
  margin-top: 0
