.new-competition
  background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.5)), url('../images/boombox.jpg')
  text-align center
  width: 100%
  height: 100vh
  padding: 50px 0
  form
    width: 700px
    margin: 0 auto
    background: rgba(1,1,1,0.7)
    h2
      font-size: 40px
  input
    font-size 35px
    border 5px solid spotifygreen
    border-radius(5px)
    margin 20px auto
    padding 5px
    text-align: center
  button
    background: spotifygreen
    color: whitetext
    font-size: 20px
    border-color: darken(spotifygreen, 20%)
    width: 150px
    height: 60px
    border-radius(25px)
    &:hover
      background: lighten(spotifygreen, 20%)
