.comp
  background-img('turntable.jpg')
  width: 100%
  margin: 0 auto

.competition-panel
  width: 600px
  margin-top: 100px

  .nav-tabs
    border-bottom: none

    li
      a
        color: spotifygreen
        background: hover
        margin-right: 0
        border-top-left-radius: 8px
        border-top-right-radius: 8px
        border-bottom: none

        &:focus
          outline: none

        &:hover
          border-color: spotifygreen
          border-bottom: none

      &.active
        a
          color: spotifygreen
          background: hover
          border-color: spotifygreen
          border-bottom: none

  .tab-content
    background: gridbackground
    margin-top: 1px
    height: 350px

    .tab-panel
      height: 400px

