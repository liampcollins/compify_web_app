
.selector
  color: whitetext
  border 1px solid spotifygreen
  max-height: 350px

.playlist-selector
  ul
    width: 200px
    max-height: 348px
    padding-left: 0
    display: inline-block
    vertical-align: top
    overflow: scroll

    li
      list-style: none
      list-style-type: none
      width: 100%
      height: 50px
      padding: 15px 10px
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis
    
      &.active
        border: solid 1px spotifygreen
        background: gridbackground

      &:hover
        background: hover
        cursor: pointer

  .player
    display: inline-block
    width: 398px

    div
      background: hover
      height: 38px
      margin-top: -5px
      text-align: center

      .btn
        color: spotifygreen
        border-color: spotifygreen
        background: #fff

.playlist-selector > h4
  margin: 0
