.playlist-in-grid
  div span
    font-size: 20px
  .glyphicon-envelope
    font-size: 15px
    position: relative
    top: -50px
    right: -40px
    cursor: pointer
.playlist-selector
  margin: 0 auto
  width: 100px
  border 5px solid #648F00
  max-height: 200px
  overflow: scroll
  margin-bottom: 20px
  div
    font-size: 15px
    color: #fff
    width: 100%
    line-height: 1.5
    cursor: pointer
    &:hover
      background: rgba(0,0,0,0.7)
