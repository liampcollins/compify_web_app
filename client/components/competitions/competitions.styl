.competitions
  background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.5)), url('../images/recordplayer.jpg')
  background-size: cover
  display flex
  flex-wrap wrap
  width 100%
  height: 100vh
  margin 0 auto
  a
    width 33.33%
  span
    position absolute
    left 95%
    top 5px
    font-size 15px
    font-weight bold
    &:hover
      color #fff
  .competitions-grid
    display: flex
    align-items: center
    width: 100%

// COMPETITION IN GRID
.competition-in-grid, .playlist-in-grid
  max-width 25%
  flex-grow 1
  flex-shrink 0
  margin 0 20px 20px 20px
  padding: 20px
  border 1px solid #648F00
  box-shadow 0 0 0 5px rgba(0,0,0,0.03);
  background: rgba(0,0,0,0.5)
  text-align: center
  color: #fff
  &:hover
    background: rgba(0,0,0,0.7)
  a
    display: inline-block
    min-width: 100%
    min-height: 100%
    div
      font-size: 20px
      color #fff
      line-height: 2

// COMPETITION PAGE
.comp
  background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.5)), url('../images/turntable.jpg')
  background-size: cover
  display: flex
  flex-wrap: wrap
  width: 100%
  height: 100vh
  margin: 0 auto
  div
    width 50%
    display inline-block
    vertical-align top
    font-size 50px
  .comp-name
    padding 200px 150px 100px 150px
    text-align center
  .no-playlists
    width: 100%
    text-align: center
    color: #fff
  .add-playlist-button
    width: 100%
    text-align: center;
    span
      color: #fff
      background: #648F00
      border-radius(50px)
      padding: 6px 25px
      cursor: pointer;

//  NEW COMPETITION
.new-competition
  background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.5)), url('../images/boombox.jpg')
  text-align center
  width: 100%
  height: 100vh

  input
    font-size 35px
    border 5px solid spotifygreen
    border-radius(5px)
    margin 20px auto
    padding 5px
  button
    background: spotifygreen
    color: #fff
    font-size: 20px
    border-color: darken(spotifygreen, 20%)
    width: 150px
    height: 60px
    border-radius(25px)
    &:hover
      background: lighten(spotifygreen, 20%)
